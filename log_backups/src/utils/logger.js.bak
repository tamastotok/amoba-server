function timestamp() {
  return new Date().toISOString();
}

function tag(label) {
  return `[${label}]`.padEnd(10, ' ');
}

// Unified logger
const log = {
  info: (...msg) => console.log(`${tag('INFO')}${timestamp()}`, ...msg),
  warn: (...msg) => console.warn(`${tag('WARN')}${timestamp()}`, ...msg),
  error: (...msg) => console.error(`${tag('ERROR')}${timestamp()}`, ...msg),

  // Domain-specific logs
  game: (...msg) => console.log(`${tag('GAME')}${timestamp()}`, ...msg),
  ai: (...msg) => console.log(`${tag('AI')}${timestamp()}`, ...msg),
  human: (...msg) => console.log(`${tag('HUMAN')}${timestamp()}`, ...msg),
  db: (...msg) => console.log(`${tag('DB')}${timestamp()}`, ...msg),
  server: (...msg) => console.log(`${tag('SERVER')}${timestamp()}`, ...msg),
  socket: (...msg) => console.log(`${tag('SOCKET')}${timestamp()}`, ...msg),

  // Optional: debug-level log (only prints in dev)
  debug: (...msg) => {
    if (process.env.NODE_ENV !== 'production') {
      console.log(`${tag('DEBUG')}${timestamp()}`, ...msg);
    }
  },
};

module.exports = log;
