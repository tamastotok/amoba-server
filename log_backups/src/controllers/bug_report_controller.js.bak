const BugReport = require('../models/BugReport');

// Allowed categories
const VALID_CATEGORIES = ['gameplay', 'ui', 'other'];

// POST /api/bugreport
exports.createBugReport = async (req, res) => {
  try {
    const { playerName, category, message } = req.body;

    if (!message)
      return res
        .status(400)
        .json({ success: false, message: 'Message is required' });

    if (!VALID_CATEGORIES.includes(category))
      return res.status(400).json({
        success: false,
        message: 'Invalid category',
      });

    const report = new BugReport({
      playerName: playerName || 'Anonymous',
      category,
      message,
    });

    await report.save();

    res.json({ success: true });
  } catch (err) {
    console.error('Bug report creation failed:', err);
    res.status(500).json({ error: 'Server error saving bug report' });
  }
};

// GET /api/bugreport
exports.getBugReports = async (req, res) => {
  try {
    const reports = await BugReport.find().sort({ createdAt: -1 });

    return res.json({
      success: true,
      reports,
    });
  } catch (err) {
    console.error('Failed to fetch bug reports:', err);
    res.status(500).json({ error: 'Server error fetching reports' });
  }
};

// DELETE /api/bugreport/:id
exports.deleteBugReport = async (req, res) => {
  try {
    const deleted = await BugReport.findByIdAndDelete(req.params.id);

    if (!deleted) {
      return res.json({
        success: false,
        message: 'Bug report not found',
      });
    }

    return res.json({ success: true });
  } catch (err) {
    console.error('Bug report delete failed:', err);
    res.status(500).json({ error: 'Server error deleting bug report' });
  }
};
